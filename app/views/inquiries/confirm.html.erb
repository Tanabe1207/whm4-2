<div class="page-header">
  <h1>お問い合わせ</h1>
</div>

<%= form_for @inquiry, url:inquiries_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <!--hidden_field は form_forタグの中でパラメータを直接フォームから入力させないまま値を受け渡したい時に使用 -->
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %>
      </td>
    </tr>
  </table>
  <%= f.submit'送信', class:'btn btn-primary' %>
<% end %>
