<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 users-new-container">
        <h1 class="text-center text-white">Log in</h1>
        <%= form_for :session, url: login_path do |f| %>
        <!-- form_forはデフォルトでHTTPメソッドのPOSTに飛ぶ。
      login_pathはrouterの'/login'を探せと指定してる -->
         <div class="form-group">
           <%= f.label :mail, class: 'text-white' %>
           <%= f.text_field :mail, class: 'form-control' %>
        </div>
        <div class="form-group">
           <%= f.label :password, class: 'text-white' %>
           <%= f.password_field :password, class:'form-control' %>
        </div>

           <%= f.submit "Log in", class: 'btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
