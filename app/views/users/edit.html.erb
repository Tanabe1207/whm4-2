<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Working Holiday Mate ユーザー編集画面</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :nickname, class: 'text-white' %>
            <%= f.text_field :nickname, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :mail, class: 'text-white' %>
            <!-- <label class="text-white" for="mail">メールアドレス</label> -->
            <%= f.email_field :mail, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'text-white' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-white' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール画像を挿入%>
            <%= f.file_field :my_image %>
          </div>
          <div class="form-group">
            <div class="radio-inline">
              <label>
                <%= f.radio_button :gender, "男性" %>男性
              </label>
            </div>
            <div class="radio-inline">
              <label>
                <%= f.radio_button :gender, "女性" %>女性
              </label>
            </div>
          </div>
          <!-- <div class="radio-inline">
            <%#= f.label :gender, class: 'text-white' %>
            <%#= f.radio_button :gender, :"男性" %>
          </div>
          <div class="radio-inline">
            <%#= f.label :gender, class: 'text-white' %>
            <%#= f.radio_button :gender, :"女性" %>
          </div> -->
          <div class="field">
            <%= f.label  "生年月日" %><br>
            <%= f.date_select :birthday,
                              :start_year        => 1980,
                              :use_month_numbers => true ,
                              :date_separator => "-" %>
          </div>
          <div class="form-group">
            <%#= f.label :age, class: 'text-white' %>
            <%#= f.text_field :age, class: 'form-control' %>
          </div>
          <div class="form-group">
             <%= f.label :"国籍" %>
             <%= f.select :nationality,
            [["日本","Japan"],["Korea","Korea"],["Taiwan","Taiwan"],["Hong Kong","Hong Kong"],["China","China"],["Australia","Australia"],
            ["New Zealand","New Zealand"],["France","France"],["German","German"],["Nederland","Nederland"],["Canada","Canada"]] ,class: 'form-control' %>
            <%#= f.select :nationality,
            [["Japan"]["Korea"]["China"]["Chinese Taipei"]["Hong Kong"]["Australia"]["Canada"]["New Zealand"]["Ireland"]["German"]["UK"]["France"]]
             class: 'form-control' %>
             <!-- # "Japan"
             # "Korea"
             # "Taiwan"
             # "Hong Kong"
             # "China"
             # "Australia"
             # "New Zealand"
             # "France"
             # "German"
             # "Nederland"
             # "Canada" -->
          </div>

          <div class="form-group">
            <%= f.label :languages, "話したい言語" %><br/>
            <%= f.fields_for :languages do |builder| %>
              <%= render "language_fields", f: builder %>
            <% end %>
            <%= link_to_add_fields "追加", f, :languages %>
          </div>

          <!-- language_usersをlanguegesに紐づけて並列表示 -->
          <div class="form-group">
            <%= f.label :hobby, class: 'text-white' %>
            <%= f.text_field :hobby, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :"自己紹介", class:'text-white' %>
            <%= f.text_field :introduce_yourself, class:'form-control' %>
          </div>

          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
